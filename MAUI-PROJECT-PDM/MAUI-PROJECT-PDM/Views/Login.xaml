<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_PROJECT_PDM.Views.Login"
             BackgroundColor="AliceBlue"
             Title="Login">
    <VerticalStackLayout WidthRequest="600" HeightRequest="300" BackgroundColor="White" HorizontalOptions="Center" Spacing="5">
        <Label Text="Log In" FontSize="Title" HorizontalOptions="CenterAndExpand"/>
        <Entry x:Name="emailLogIn" Placeholder="Email" WidthRequest="300" TextColor="Black"/>
        <Entry x:Name="passwordLogIn"  Placeholder="Password" IsPassword="True" WidthRequest="300" TextColor="Black"/>

        <Button x:Name="btnLogin" Text="Login" Clicked="LoginButtonClicked" HeightRequest="50" WidthRequest="300" />
        <Button x:Name="btnSignUp" Text="Or Sign Up" Clicked="SignUpButtonClicked" HeightRequest="50" WidthRequest="300" />

    </VerticalStackLayout>
</ContentPage>