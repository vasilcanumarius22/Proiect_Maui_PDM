<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_PROJECT_PDM.Views.MyFoods"
             Title="MyFoods">

    <ScrollView>


            <VerticalStackLayout HorizontalOptions="Center">

            <HorizontalStackLayout Padding="2" HorizontalOptions="CenterAndExpand">
                <DatePicker DateSelected="DatePicker_Food_DateSelected" x:Name="DatePicker_Food"/>

                <Label x:Name="label_total_calories" Text="0" Margin="10"/>

            </HorizontalStackLayout>





            <ListView
        x:Name="listViewMyFoods"
        ItemTapped="RemoveFood">
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout
                        Padding="8">
                                <Image Source="{Binding UrlImage}" MaximumWidthRequest="100" MaximumHeightRequest="100"/>
                                <Label Text="{Binding Title}"/>
                                <Label Text="{Binding Calories, StringFormat='Calorii: {0}'}"/>
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            </VerticalStackLayout>
    </ScrollView>
    


    


</ContentPage>