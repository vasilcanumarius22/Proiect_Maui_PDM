<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_PROJECT_PDM.MainPage"
             Title="LISTA MANCARURI DE ALES - PROVIZORIU">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Profile" Clicked="Toolbar_Profile_Clicked" Order="Secondary"/>
        <ToolbarItem Text="My Foods" Clicked="ToolbarItem_MyFoods_Clicked" Order="Secondary"/>
        <ToolbarItem Text="Log Out" Clicked="Toolbar_LogOut_Clicked" Order="Secondary"/>
    </ContentPage.ToolbarItems>

    <ListView
        x:Name="listViewFoods"
        ItemTapped="OpenFoodDetail">
        
        <ListView.ItemTemplate >
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout
                        Padding="8">
                        <Image Source="{Binding UrlImage}" MaximumWidthRequest="100" MaximumHeightRequest="100"/>
                        <Label Text="{Binding Title}"/>
                        <Label Text="{Binding Calories, StringFormat='Calorii: {0}'}"/>
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
